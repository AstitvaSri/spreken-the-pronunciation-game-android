<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="?attr/colorBackgroundFloating"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.sivastava.astitva.spreken.Spreken">

    <LinearLayout
        android:id="@+id/mothercontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="@android:color/background_light"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/scoreboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/allerta_stencil"
                    android:text="YOUR SCORE"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/currentscore"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/difftxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/allerta_stencil"
                android:text="DIFFICULTY\n"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/allerta_stencil"
                    android:text=" HIGH SCORE"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/highscore"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/pronounce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/bungee_inline"
            android:text=""
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="50sp" />


        <LinearLayout
            android:id="@+id/controlpanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hinttxt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.2"
                android:text=""
                android:textAlignment="center" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/animic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:src="@drawable/micicon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/controllers"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="horizontal">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/listenit"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/howtopronbtnimg"/>

                <TextView
                    android:id="@+id/supportnext"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/countdown"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/ribeye_marrow"
                    android:textAlignment="center"
                    android:textSize="55sp"
                    android:visibility="visible" />


                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/restartgame"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/replay"
                    android:visibility="visible" />

                <pl.droidsonroids.gif.GifImageView

                    android:id="@+id/nxtbtn"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/nextbtn"
                    android:visibility="visible"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
